<Window x:Class="FourierCircles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FourierCircles"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid >
        <Canvas x:Name="CircleCanvas" Height="400" Width="400"  Background="Beige">
            <local:CircleArm x:Name="MainCircleArm" ArmCenterX="100" ArmCenterY="100" ArmEndX="150" ArmEndY="100" RotateAngle="0" ArmLength="100"/>
        </Canvas>
    </Grid>
</Window>
