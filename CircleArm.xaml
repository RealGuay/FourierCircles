<UserControl x:Class="FourierCircles.CircleArm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FourierCircles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="900">
        <Line x:Name="SegmentLine"   X1="{Binding ArmCenterX}" Y1="{Binding ArmCenterY}" X2="{Binding ArmEndX}" Y2="{Binding ArmEndY}" Stroke="Red" StrokeThickness="2" Visibility="Visible">
            <Line.RenderTransform>
            <RotateTransform Angle="{Binding RotateAngle}" CenterX="{ Binding X1, ElementName=SegmentLine}" CenterY="{ Binding Y1, ElementName=SegmentLine}" />
            </Line.RenderTransform>
        </Line>
</UserControl>
