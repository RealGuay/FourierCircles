<UserControl x:Class="FourierCircles.CircleArm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FourierCircles"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="900">
    <Canvas x:Name="CircleCanvas" Height="400" Width="400"  Background="Beige">
        <Ellipse Canvas.Top="0" Canvas.Left="0" Height="200" Width="200" StrokeThickness="2" Stroke="Cyan"/>
        <Line Canvas.Top="100" Canvas.Left="100" x:Name="SegmentLine"  X1="0" Y1="0" X2="100" Y2="00" Stroke="Red" StrokeThickness="2" Visibility="Visible">
            <Line.RenderTransform>
                <RotateTransform Angle="{Binding RotateAngle}" CenterX="0" CenterY="0"/>
            </Line.RenderTransform>
        </Line>
        <Ellipse Canvas.Left="98" Canvas.Top="98"  Height="4" Width="4" StrokeThickness="3" Stroke="Black"/>
        <Rectangle x:Name="MyRect" Canvas.Top="100" Canvas.Left="100"  Width="10" Height="5" Fill="Orange"/>
    </Canvas>
</UserControl>
